@model uygulama30.Models.Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<form asp-action="Delete" asp-controller="Category" method="post">
    <div class="form-group row">
        <input type="hidden" asp-for="CategoryId" />
        <label for="text" class="col-4 col-form-label">Kategori İsmi</label>
        <div class="col-8">
            <input id="text" asp-for="CategoryName" readonly placeholder="Kategori İsmin Girin" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Bu Kayıt Silinsin</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-dark">İptal Et</a>
        </div>
    </div>
</form>