@model uygulama30.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>


<form asp-action="Edit" asp-controller="Category" method="post">
    <div class="form-group row">
        <input type="hidden" asp-for="CategoryId"/>
        <label for="text" class="col-4 col-form-label">Kategori İsmi</label>
        <div class="col-8">
            <input id="text" asp-for="CategoryName" placeholder="Kategori İsmin Girin" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>